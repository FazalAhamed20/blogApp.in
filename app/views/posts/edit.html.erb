<h1>Edit post</h1>

<%= form_with model:@post do |f| %>

<p>
<%= f.label :title%> <br>
<%= f.text_field :title%> <br>

</p>
<p>
<%= f.label :body%> <br>
<%= f.text_area :body%> <br>

</p>
<p>

<%= f.select :category_id, 
             Category.all.collect { |x| [x.name, x.id] }, 
             { include_blank: "Select a category" } %> <br>


</p>


<p>
<%= f.submit "Update the post"%> <br>


</p>


<%end%>

<%= link_to "Go back",post_path(@post.id)%>